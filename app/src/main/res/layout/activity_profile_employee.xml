<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileEmployee"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/bungee"
        android:padding="0dp"
        android:text="WELCOME"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="4dp"
        android:text="Make your Profile To Stand Out"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">





            <EditText
                android:layout_width="match_parent"
                android:id="@+id/NameEditTextProfile"
                android:layout_height="wrap_content"
                android:lines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:inputType="text"
                android:hint="Name"
/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AboutMeEditTxtProfile"
                android:inputType="text"
                android:lines="8"
                android:maxLines="10"

                android:scrollbars="vertical"
                android:hint="About Me"
                />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UniversityEdtTxtProfile"
                android:inputType="text"
                android:lines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:hint="University"
                />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ResumeEdtTxtProfile"
                android:inputType="text"
                android:lines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:hint="Resume Link"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ContactEdtTxtProfile"

                android:lines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:inputType="text"
                android:hint="Contact"
                />





</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/submit_profileData"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"/>

</LinearLayout>